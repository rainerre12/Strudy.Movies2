    @Html.ValidationMessageFor(model => model.selectedGenreId, "", new { @class = "text-danger" })
    </div> *@

    <div class="form-group">
        <label for="selectMultipleGenreIds">Genres</label>
        <div class="select2-primary">
            @Html.ListBoxFor(model => model.selectMultipleGenreIds, new MultiSelectList(Model.GenreList, "Id", "Name"), 
            new { @class = "select2", multiple = "multiple", style = "width: 100%;", id = "selectMultipleGenreIds" })
            @Html.ValidationMessageFor(model => model.selectMultipleGenreIds, "", new { @class = "text-danger" })
        </div>

    </div>


</div>
<div class="modal-footer justify-content-between">
    <button type="button" class="btn btn-outline-light" data-dismiss="modal">Close</button>
    <button type="button" class="btn btn-outline-light" id="registerMovie">Register</button>
</div>
<script src="~/lib/plugins/toastr/toastr.min.js"></script>
