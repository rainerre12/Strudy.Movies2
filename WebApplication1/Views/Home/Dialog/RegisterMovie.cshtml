@using WebApplication1.Models.CustomModel
@model HomeViewModel


<div class="modal-header">
    <h4 class="modal-title">Register Movie</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">

    <div class="form-group">
        <label for="inputmoviename">Name</label>
        @Html.TextBoxFor(model => model.MovieName, new { @class = "form-control", id = "inputmoviename", placeholder = "Movie Name" })
        @Html.ValidationMessageFor(model => model.MovieName, "", new { @class = "text-danger" })
    </div>

    @*  <div class="form-group">
    <label for="selectgenre">Genre</label>
