@using WebApplication1.Models.CustomModel
@model HomeViewModel


<div>

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">DashBoard</h1>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">

            <div class="row">

                <div class="card">

                    <div class="card-header border-transparent">
                        <h3 class="cardcard-title">Movie List</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>

                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>

                    <div class="card-body p-0">
                        <div class="table-responsive">

                            @if(Model.MovieList.Count > 0)
                            {
                                <table id="movietbl" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Name</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var d in Model.MovieList)
                                        {
                                            <tr>
                                                <td>@d.Id</td>
                                                <td>@d.Name</td>
                                                <td>@d.IsAvailanble</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p>No Movies Available</p>
                            }


                        </div>
                    </div>


                </div>

            </div>


        </div>
    </section>

</div>

<script src="~/lib/plugins/jquery/jquery.min.js"></script>
<script>
    $(function () {
        $("#movietbl").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#movietbl_wrapper .col-md-6:eq(0)');

    });
</script>
